{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "types/**.d.ts",
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "axios"
    ],
    "moduleResolution": "Node",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}